#include <iostream>
#include <string>
#include <algorithm>
#include <sstream>
#include <iomanip>

using String = std::string;
using GPA_t = double;

enum GradeLevel {
    FRESHMAN = 1,
    SOPHOMORE = 2,
    JUNIOR = 3,
    SENIOR = 4
};

namespace StudentUtils {

    void formatName(String &name) {
        std::transform(name.begin(), name.end(), name.begin(),
            [](unsigned char c){ return std::toupper(c); });
    }

    String gradeLevelToString(GradeLevel g) {
        switch (g) {
            case FRESHMAN:  return "Freshman";
            case SOPHOMORE: return "Sophomore";
            case JUNIOR:    return "Junior";
            case SENIOR:    return "Senior";
            default:        return "Unknown";
        }
    }

    String formatGPA(GPA_t gpa) {
        std::ostringstream oss;
        oss << std::fixed << std::setprecision(2) << gpa;
        return oss.str();
    }

    void displayStudentInfo(const String &name, GradeLevel grade, GPA_t gpa) {
        std::cout << "Student Record:\n";
        std::cout << "Name: " << name << '\n';
        std::cout << "Grade Level: " << gradeLevelToString(grade) << '\n';
        std::cout << "GPA: " << formatGPA(gpa) << '\n';
    }

} // namespace StudentUtils

int main() {
    String name;
    int gradeInput = 0;
    GPA_t gpa = 0.0;

    std::cout << "Enter student name: ";
    std::getline(std::cin, name);

    while (true) {
        std::cout << "Enter grade level (1=Freshman, 2=Sophomore, 3=Junior, 4=Senior): ";
        if (!(std::cin >> gradeInput)) {
            std::cin.clear();
            std::cin.ignore(std::numeric_limits<std::streamsize>::max(), '\n');
            std::cout << "Invalid input. Please enter a number 1-4.\n";
            continue;
        }
        if (gradeInput >= 1 && gradeInput <= 4) break;
        std::cout << "Please enter a number between 1 and 4.\n";
    }

    while (true) {
        std::cout << "Enter GPA: ";
        if (!(std::cin >> gpa)) {
            std::cin.clear();
            std::cin.ignore(std::numeric_limits<std::streamsize>::max(), '\n');
            std::cout << "Invalid input. Please enter a numeric GPA.\n";
            continue;
        }
        if (gpa >= 0.0 && gpa <= 4.0) break;
        std::cout << "GPA must be between 0.00 and 4.00.\n";
    }

    StudentUtils::formatName(name);
    StudentUtils::displayStudentInfo(name, static_cast<GradeLevel>(gradeInput), gpa);

    return 0;
}
```// filepath: /workspaces/cpp-student-records/src/student_records.cpp
